{
  "name": "cnd-core",
  "version": "1.0.0",
  "description": "A fully client-side application for CnD.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./alloy-graph": {
      "types": "./dist/alloy-graph.d.ts",
      "import": "./dist/alloy-graph.mjs",
      "require": "./dist/alloy-graph.js"
    },
    "./alloy-instance": {
      "types": "./dist/alloy-instance.d.ts",
      "import": "./dist/alloy-instance.mjs",
      "require": "./dist/alloy-instance.js"
    },
    "./layout": {
      "types": "./dist/layout.d.ts",
      "import": "./dist/layout.mjs",
      "require": "./dist/layout.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:browser": "tsup --config tsup.browser.config.ts",
    "build:all": "npm run build && npm run build:browser",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build:all",
    "serve": "python3 -m http.server 8080"
  },
  "keywords": [
    "typescript",
    "library",
    "client-side",
    "npm"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/cnd-core.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cnd-core/issues"
  },
  "homepage": "https://github.com/yourusername/cnd-core#readme",
  "devDependencies": {
    "@types/chroma-js": "^3.1.1",
    "@types/ejs": "^3.1.5",
    "@types/graphlib": "^2.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.18",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "@types/webcola": "^3.1.27",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/d3": "^4.13.12",
    "@types/graphlib-dot": "^0.6.4",
    "@xmldom/xmldom": "^0.9.8",
    "chroma-js": "^3.1.2",
    "d3": "^4.13.0",
    "forge-expr-evaluator": "^1.1.0",
    "graphlib": "^2.1.8",
    "graphlib-dot": "^0.6.4",
    "js-yaml": "^4.1.0",
    "kiwi.js": "^1.1.3",
    "lodash": "^4.17.21",
    "simple-graph-query": "^1.0.0",
    "webcola": "^3.4.0"
  }
}
