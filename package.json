{
  "name": "cnd-core",
  "version": "1.1.5-beta.2",
  "description": "A fully client-side application for CnD.",
  "main": "./dist/browser/cnd-core-complete.global.js",
  "types": "./dist/browser/cnd-core-complete.global.d.ts",
  "files": [
    "dist/browser",
    "dist/components"
  ],
  "exports": {
    ".": {
      "import": "./dist/browser/cnd-core-complete.global.js",
      "require": "./dist/browser/cnd-core-complete.global.js"
    },
    "./components/*": {
      "import": "./dist/components/*.global.js",
      "require": "./dist/components/*.global.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:browser": "tsup --config tsup.browser.config.ts",
    "build:components": "tsup --config tsup.components.config.ts",
    "build:all": "npm run build:browser && npm run build:components",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build:all",
    "serve": "python3 -m http.server 8080",
    "docs": "typedoc",
    "docs:serve": "npm run docs && cd docs && python3 -m http.server 8081",
    "docs:clean": "rm -rf docs",
    "docs:generate": "./scripts/generate-docs.sh",
    "docs:serve-full": "./scripts/generate-docs.sh --serve"
  },
  "keywords": [
    "typescript",
    "library",
    "client-side",
    "npm"
  ],
  "author": "Siddhartha Prasad",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidprasad/cnd-core.git"
  },
  "bugs": {
    "url": "https://github.com/sidprasad/cnd-core/issues"
  },
  "homepage": "https://github.com/sidprasad/cnd-core#readme",
  "devDependencies": {
    "@types/chroma-js": "^3.1.1",
    "@types/dagre": "^0.7.52",
    "@types/ejs": "^3.1.5",
    "@types/graphlib": "^2.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.18",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "@types/webcola": "^3.1.27",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/d3": "^4.13.12",
    "@types/graphlib-dot": "^0.6.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@xmldom/xmldom": "^0.9.8",
    "chroma-js": "^3.1.2",
    "cnd-core": "^1.1.4",
    "d3": "^7.9.0",
    "dagre": "^0.8.5",
    "forge-expr-evaluator": "^1.1.0",
    "graphlib": "^2.1.8",
    "graphlib-dot": "^0.6.4",
    "js-yaml": "^4.1.0",
    "kiwi.js": "^1.1.3",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "simple-graph-query": "^1.1.1",
    "webcola": "^3.4.0"
  }
}
